# Environment Configuration
ENVIRONMENT=development
DEBUG=true

# Database Configuration
DATABASE_PATH=data/leads.db

# HTTP Client Configuration
REQUESTS_PER_MINUTE=30
USER_AGENT="Hamilton Business Research Bot 2.0 (Ethical Crawler)"

# API Keys (Optional)
GOOGLE_MAPS_API_KEY=your_google_maps_key_here
BING_MAPS_API_KEY=your_bing_maps_key_here
SERPAPI_KEY=your_serpapi_key_here
HUNTER_IO_KEY=your_hunter_io_key_here

# Business Criteria (Override defaults if needed)
TARGET_REVENUE_MIN=1000000
TARGET_REVENUE_MAX=2000000
MIN_YEARS_IN_BUSINESS=15
MAX_EMPLOYEE_COUNT=50

# Scoring Configuration
QUALIFICATION_THRESHOLD=60

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json  # or 'text' for human-readable
LOG_FILE=logs/lead_generation.log

# Google Sheets Configuration (for exports)
GOOGLE_SHEETS_CREDENTIALS_FILE=credentials.json
GOOGLE_SHEETS_SPREADSHEET_ID=your_spreadsheet_id_here

# Rate Limiting (for production)
REDIS_URL=redis://localhost:6379/0

# Development Settings
MOCK_DATA_ENABLED=true
SKIP_EXTERNAL_APIS=false