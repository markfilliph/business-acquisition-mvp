# ==================== API Keys ====================
# Required API keys for external services
# IMPORTANT: Never commit actual API keys to version control

# Google Places API key for business discovery
# Get from: https://console.cloud.google.com/apis/credentials
GOOGLE_PLACES_API_KEY=your_google_places_api_key_here

# OpenAI API key for LLM extraction
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Yelp API key for business data enrichment (optional)
# Get from: https://www.yelp.com/developers
YELP_API_KEY=your_yelp_api_key_here

# Anthropic API key (optional, for Claude)
# Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here


# ==================== Rate Limits ====================
# Rate limits in requests per second to prevent quota exhaustion

# Google Places API rate limit (default: 10 req/sec)
GOOGLE_PLACES_RATE_LIMIT=10.0

# OpenAI API rate limit (default: 0.83 req/sec = 50 req/min)
OPENAI_RATE_LIMIT=0.83

# Yelp API rate limit (default: 5 req/sec)
YELP_RATE_LIMIT=5.0

# Wayback Machine API rate limit (default: 1 req/sec, be nice to Archive.org)
WAYBACK_RATE_LIMIT=1.0


# ==================== Business Criteria Thresholds ====================
# Lead qualification thresholds

# Minimum confidence score for revenue gate (0.0-1.0)
REVENUE_CONFIDENCE_THRESHOLD=0.6

# Target revenue range (USD)
TARGET_REVENUE_MIN=1000000
TARGET_REVENUE_MAX=1400000

# Employee count range (small to mid-sized businesses)
MIN_EMPLOYEE_COUNT=5
MAX_EMPLOYEE_COUNT=30

# Minimum years in business
MIN_YEARS_IN_BUSINESS=15

# Minimum website age in years (for sign shop filtering)
WEBSITE_MIN_AGE_YEARS=3.0


# ==================== Geographic Settings ====================
# Geographic boundaries for lead generation

# Geographic radius for business discovery (kilometers)
GEO_RADIUS_KM=15.0

# Geographic center (Hamilton, ON)
GEO_CENTER_LAT=43.2557
GEO_CENTER_LNG=-79.8711

# Allowed cities (comma-separated)
# Only businesses in these cities will pass the geo gate
ALLOWED_CITIES=Hamilton,Ancaster,Dundas,Stoney Creek,Waterdown


# ==================== Retry & Resilience Config ====================
# Network resilience settings

# Maximum retry attempts for failed requests
RETRY_MAX_ATTEMPTS=3

# Base delay for exponential backoff (seconds)
RETRY_BASE_DELAY=1.0

# Maximum delay for exponential backoff (seconds)
RETRY_MAX_DELAY=60.0

# Circuit breaker: number of failures before opening
CIRCUIT_BREAKER_THRESHOLD=5

# Circuit breaker: recovery timeout (seconds)
CIRCUIT_BREAKER_TIMEOUT=60


# ==================== Cache Settings ====================
# API response cache time-to-live (seconds)

# Places API cache TTL (30 days default)
PLACES_CACHE_TTL=2592000

# LLM extraction cache TTL (90 days default)
LLM_CACHE_TTL=7776000

# Wayback Machine cache TTL (30 days default)
WAYBACK_CACHE_TTL=2592000


# ==================== Database Settings ====================
# SQLite database configuration

# Database file path
DATABASE_PATH=data/leads.db

# Database connection timeout (seconds)
DATABASE_TIMEOUT=30

# Maximum database connections
DATABASE_MAX_CONNECTIONS=10


# ==================== HTTP Settings ====================
# HTTP client configuration

# HTTP request timeout (seconds)
HTTP_TIMEOUT=10.0

# HTTP User-Agent header
HTTP_USER_AGENT=Hamilton Business Research Bot 2.0 (Ethical Crawler)

# Maximum HTTP retries
HTTP_MAX_RETRIES=3


# ==================== Environment ====================
# Application environment configuration

# Environment: development, staging, production
ENVIRONMENT=development

# Enable debug mode (true/false)
DEBUG=false

# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
